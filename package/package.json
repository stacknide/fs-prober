{
  "name": "your-package-name",
  "version": "0.0.0",
  "description": "description of your-package-name",
  "source": "src/index.ts",
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "publishConfig": {
    "access": "public"
  },
  "files": [
    "LICENSE",
    "CHANGELOG.md",
    "src",
    "dist",
    "README.md"
  ],
  "scripts": {
    "dev:tsc": "tsc -w -p tsc.tsconfig.json",
    "dev": "NODE_ENV=development tsup src/index.ts --format cjs,esm --dts --watch",
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "lint:tsc": "tsc --noEmit",
    "lint:biome": "biome check ./src",
    "lint": "yarn lint:tsc && yarn lint:biome",
    "format": "biome check --write ./src"
  },
  "devDependencies": {
    "@biomejs/biome": "1.9.4",
    "lefthook": "^1.9.2",
    "tsup": "^8.3.5",
    "typescript": "^5.7.2"
  },
  "author": "Author of your-package-name",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/your-org/your-package-name/issues"
  },
  "homepage": "https://github.com/your-org/your-package-name#readme",
  "keywords": []
}
