{
  "$schema": "https://biomejs.dev/schemas/2.0.4/schema.json",
  "vcs": { "clientKind": "git", "enabled": true, "useIgnoreFile": true },
  "files": {},
  "formatter": {
    "enabled": true,
    "formatWithErrors": false,
    "indentStyle": "space",
    "indentWidth": 2,
    "lineWidth": 100,
    "includes": [
      "**/*.{js,ts,jsx,tsx,json,css,html,md}",
      "!**/*/generated-new.ts",
      "!**/*/generated-v2.ts"
    ]
  },
  "assist": {
    "actions": {
      "source": {
        "organizeImports": "on"
      }
    }
  },
  "linter": {
    "enabled": true,
    "rules": {
      "recommended": true,
      "a11y": {
        "noHeaderScope": "warn",
        "useAltText": "off",
        "useButtonType": "off",
        "useMediaCaption": "off",
        "useKeyWithClickEvents": "off"
      },
      "complexity": {
        "noBannedTypes": "error",
        "noForEach": "off",
        "useArrowFunction": "off",
        "useLiteralKeys": "warn",
        "useOptionalChain": "warn",
        "useSimplifiedLogicExpression": "warn",
        "noUselessContinue": "warn"
      },
      "correctness": {
        "noChildrenProp": "error",
        "noConstructorReturn": "warn",
        "noInnerDeclarations": "warn",
        "useExhaustiveDependencies": "warn",
        "noUnusedImports": {
          "level": "error",
          "fix": "safe"
        }
      },
      "performance": { "noAccumulatingSpread": "warn", "noDelete": "warn" },
      "security": {
        "noDangerouslySetInnerHtml": "off",
        "noDangerouslySetInnerHtmlWithChildren": "off"
      },
      "style": {
        "noNonNullAssertion": "warn",
        "noParameterAssign": "error",
        "noUnusedTemplateLiteral": "off",
        "useConst": "error",
        "useDefaultParameterLast": "off",
        "useSelfClosingElements": "error",
        "useImportType": {
          "options": { "style": "auto" },
          "level": "error",
          "fix": "safe"
        },
        "noUselessElse": "off"
      },
      "suspicious": {
        "noArrayIndexKey": "error",
        "noAssignInExpressions": "warn",
        "noConfusingVoidType": "warn",
        "noConsole": {
          "level": "error",
          "options": {
            "allow": [
              "assert",
              "error",
              "info",
              "warn",
              "debug",
              "group",
              "groupCollapsed",
              "groupEnd"
            ]
          }
        },
        "noDoubleEquals": "error",
        "noEmptyInterface": "warn",
        "noExplicitAny": "warn",
        "noImplicitAnyLet": "error",
        "noRedeclare": "error"
      }
    },
    "includes": ["!**/*.d.ts"]
  },
  "javascript": {
    "formatter": {
      "jsxQuoteStyle": "double",
      "semicolons": "asNeeded",
      "quoteStyle": "double"
    },
    "linter": {
      "enabled": true
    },
    "globals": ["global", "process"]
  },
  "json": {
    "parser": { "allowComments": true },
    "formatter": { "enabled": false }
  }
}
